{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://frankenjax.dev/schemas/compatibility_matrix.v1.schema.json",
  "title": "FrankenJAX Compatibility Matrix v1",
  "description": "Per-subsystem compatibility commitments in strict and hardened modes.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "generated_at_unix_ms",
    "scoped_api_version",
    "unknown_feature_policy",
    "rows"
  ],
  "properties": {
    "schema_version": {
      "const": "frankenjax.compatibility-matrix.v1"
    },
    "generated_at_unix_ms": {
      "type": "integer",
      "minimum": 0
    },
    "scoped_api_version": {
      "type": "string",
      "minLength": 1
    },
    "unknown_feature_policy": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "strict",
        "hardened"
      ],
      "properties": {
        "strict": {
          "type": "string",
          "enum": [
            "fail_closed"
          ]
        },
        "hardened": {
          "type": "string",
          "enum": [
            "allowlisted_repair",
            "fail_closed"
          ]
        }
      }
    },
    "rows": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "subsystem",
          "jax_behavior",
          "strict_mode",
          "hardened_mode",
          "drift_policy",
          "tests"
        ],
        "properties": {
          "subsystem": {
            "type": "string",
            "minLength": 1
          },
          "jax_behavior": {
            "type": "string",
            "minLength": 1
          },
          "strict_mode": {
            "type": "string",
            "enum": [
              "guaranteed",
              "not-guaranteed",
              "out-of-scope"
            ]
          },
          "hardened_mode": {
            "type": "string",
            "enum": [
              "guaranteed",
              "guarded-recovery",
              "not-guaranteed",
              "out-of-scope"
            ]
          },
          "drift_policy": {
            "type": "string",
            "enum": [
              "fail-closed",
              "allowlisted-repair",
              "explicit-non-goal"
            ]
          },
          "tests": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "notes": {
            "type": "string"
          }
        }
      }
    }
  }
}
