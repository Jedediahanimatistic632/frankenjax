{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://frankenjax.dev/schemas/legacy_anchor_map.v1.schema.json",
  "title": "FrankenJAX Legacy Anchor Map v1",
  "description": "Per-packet extraction map that ties FrankenJAX behavior to legacy JAX source anchors.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "packet_id",
    "generated_at_unix_ms",
    "generated_by",
    "legacy_oracle_root",
    "anchors",
    "extraction_invariants"
  ],
  "properties": {
    "schema_version": {
      "const": "frankenjax.legacy-anchor-map.v1"
    },
    "packet_id": {
      "type": "string",
      "minLength": 1
    },
    "generated_at_unix_ms": {
      "type": "integer",
      "minimum": 0
    },
    "generated_by": {
      "type": "string",
      "minLength": 1
    },
    "legacy_oracle_root": {
      "type": "string",
      "minLength": 1
    },
    "anchors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "anchor_id",
          "legacy_path",
          "legacy_symbol",
          "behavior_summary",
          "evidence_kind",
          "lines",
          "confidence"
        ],
        "properties": {
          "anchor_id": {
            "type": "string",
            "minLength": 1
          },
          "legacy_path": {
            "type": "string",
            "minLength": 1
          },
          "legacy_symbol": {
            "type": "string",
            "minLength": 1
          },
          "behavior_summary": {
            "type": "string",
            "minLength": 1
          },
          "evidence_kind": {
            "type": "string",
            "enum": [
              "source_line",
              "test_case",
              "doc_note"
            ]
          },
          "lines": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "start",
              "end"
            ],
            "properties": {
              "start": {
                "type": "integer",
                "minimum": 1
              },
              "end": {
                "type": "integer",
                "minimum": 1
              }
            }
          },
          "confidence": {
            "type": "string",
            "enum": [
              "high",
              "medium",
              "low"
            ]
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "extraction_invariants": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
