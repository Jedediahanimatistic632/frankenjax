{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://frankenjax.dev/schemas/parity_gate.v1.schema.json",
  "title": "FrankenJAX Parity Gate v1",
  "description": "Strict and hardened parity gate status with evidence references.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "packet_id",
    "generated_at_unix_ms",
    "strict_mode",
    "hardened_mode",
    "gates",
    "overall_status"
  ],
  "properties": {
    "schema_version": {
      "const": "frankenjax.parity-gate.v1"
    },
    "packet_id": {
      "type": "string",
      "minLength": 1
    },
    "generated_at_unix_ms": {
      "type": "integer",
      "minimum": 0
    },
    "strict_mode": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "status",
        "checked_cases",
        "mismatches",
        "report_path"
      ],
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "pass",
            "fail"
          ]
        },
        "checked_cases": {
          "type": "integer",
          "minimum": 0
        },
        "mismatches": {
          "type": "integer",
          "minimum": 0
        },
        "report_path": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "hardened_mode": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "status",
        "checked_cases",
        "allowlisted_drift_count",
        "report_path"
      ],
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "pass",
            "fail"
          ]
        },
        "checked_cases": {
          "type": "integer",
          "minimum": 0
        },
        "allowlisted_drift_count": {
          "type": "integer",
          "minimum": 0
        },
        "report_path": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "gates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "gate_id",
          "description",
          "status",
          "evidence_refs"
        ],
        "properties": {
          "gate_id": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "enum": [
              "pass",
              "fail",
              "skipped"
            ]
          },
          "evidence_refs": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "overall_status": {
      "type": "string",
      "enum": [
        "pass",
        "fail"
      ]
    }
  }
}
